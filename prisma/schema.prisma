generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  CUSTOMER
}

enum OrderStatus {
  PENDING
  SHIPPED
  DELIVERED
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

enum ProductStatus {
  ACTIVE
  DRAFT
  ARCHIVED
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  phone        String
  profile      String?
  refreshToken String?
  role         UserRole @default(CUSTOMER)

  cart   Cart?
  orders Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
}

model Product {
  id               String        @id @default(uuid())
  name             String
  description      String
  price            Int
  discountPrice    Int?
  stock            Int
  thumbnail        String
  galleryImages    String[]      @default([])
  productAdjective String[]      @default([])
  isFeatured       Boolean       @default(false)
  status           ProductStatus @default(ACTIVE)
  soldCount        Int           @default(0)
  tags             String[]      @default([])
  categoryId       String

  orderItems OrderItem[]
  reviews    Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  category Category? @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([stock])
  @@index([status])
  @@index([categoryId])
}

model Category {
  id    String @id @default(ulid())
  name  String @unique
  image String

  product Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())

  @@index([createdAt])
}

model Cart {
  id     String @id @default(uuid())
  userId String @unique

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
}

model Order {
  id          String      @id @default(uuid())
  userId      String
  totalAmount Decimal
  status      OrderStatus @default(PENDING)

  user    User        @relation(fields: [userId], references: [id])
  items   OrderItem[]
  payment Payment?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  productId String
  quantity  Int
  price     Decimal

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

model Payment {
  id      String        @id @default(uuid())
  orderId String        @unique
  amount  Decimal
  status  PaymentStatus @default(PENDING)

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([status])
  @@index([orderId])
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String
  userId    String
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([productId])
}
